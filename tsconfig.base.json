{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend/clients": ["packages/backend/src/clients/index.ts"],
      "@backend/employees": ["packages/backend/src/employees/index.ts"],
      "@backend/modules": ["packages/backend/src/modules/index.ts"],
      "@backend/services": ["packages/backend/src/services/index.ts"],
      "@mobile/constants": ["packages/mobile/src/constants"],
      "@mobile/hooks": ["packages/mobile/src/hooks/index.ts"],
      "@mobile/locales": ["packages/mobile/src/locales"],
      "@mobile/models": ["packages/mobile/src/models"],
      "@mobile/navigator": ["packages/mobile/src/navigator"],
      "@mobile/screens": ["packages/mobile/src/screens"],
      "@mobile/services": ["packages/mobile/src/services"],
      "@mobile/storage": ["packages/mobile/src/storage"],
      "@mobile/theme": ["packages/mobile/src/theme/index.ts"],
      "@mobile/theme/*": ["packages/mobile/src/theme/*"],
      "@mobile/theme/fonts": ["packages/mobile/src/theme/fonts.ts"],
      "@mobile/theme/layout": ["packages/mobile/src/theme/layout.ts"],
      "@mobile/theme/spacing": ["packages/mobile/src/theme/spacing.ts"],
      "@mobile/utils": ["packages/mobile/src/utils"],
      "@sales-app/icons/*": ["packages/mobile/src/assets/icons/*"],
      "@sales-app/types": ["packages/types/src/index.ts"],
      "@sales-app/ui-mobile": ["packages/ui-mobile/src/index.ts"],
      "@sales-app/utils": ["packages/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
